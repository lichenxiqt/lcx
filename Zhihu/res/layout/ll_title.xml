<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ab="http://schemas.android.com/apk/res/org.wxc.know"
    android:layout_width="match_parent"
    android:id="@+id/action_layout"
    android:layout_height="60dip"
    android:background="#4466ee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4466ee"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <org.wxc.know.view.Content2Back
            android:id="@+id/b2h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@id/tab_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_home"
            android:textColor="#eeeeee"
            android:textSize="@dimen/tab_text_size" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_share"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_warning"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_search"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_edit"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_email"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abIcon="@drawable/ic_action_overflow"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_pulish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abText="发布"
            android:visibility="gone" />

        <org.wxc.know.view.ActionButton
            android:id="@+id/ab_clean_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ab:abText="清除未读"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/tab_pull_progress"
        layout="@layout/ll_pull_progress"
        android:visibility="gone" />

</RelativeLayout>